@Article{westen1998,
  author = {Westen, D.},
  title = {The scientific legacy of Sigmund Freud: Toward a psychodynamically informed psychological science.},
  journal = {Psychological Bulletin},
  year = {1998},
  volume = {124},
  number = {3},
  pages = {333-371},
  note = {Aunque los comentaristas declaran periódicamente que Freud ha muerto, sus repetidas mentiras se encuentran en un terreno movedizo. Los críticos suelen atacar una versión arcaica de la teoría psicodinámica que la mayoría de los médicos consideran igualmente obsoleta. Central a la teoría psicodinámica contemporánea son una serie de proposiciones sobre: (a) inconsciente cognitivo, afectivo y procesos motivacionales; (b) la ambivalencia y la tendencia de la dinámica afectivas y motivacionales para operar en paralelo y producir soluciones de compromiso; (c) los orígenes de muchas personalidades y disposiciones sociales en la infancia; (d) las representaciones mentales de uno mismo, los demás y de las relaciones; y (e) la dinámica del desarrollo. Una enorme cantidad de investigaciones en el plano cognitivo, social, de desarrollo y psicología de la personalidad es ahora compatible con muchas de estas proposiciones. El legado científico de Freud tiene implicaciones para una amplia gama de dominios de la psicología, como la integración de las limitaciones afectivas y motivacionales en los modelos conexionistas de la ciencia cognitiva. (Base de datos PsycINFO Record (c) 2012 APA, todos los derechos reservados)}
}

